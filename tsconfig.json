{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "declaration": true,
    "outDir": "dist",
    "noUnusedLocals": true,
    "target": "ES6",
  },
  "exclude": ["./dist", "./fixtures"],
  "files": ["./src/bin.ts"],
  "include": ["src/**/*"],
}
