{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true,
    "outDir": "dist",
    "noUnusedLocals": true
  },
  "exclude": ["./dist", "./fixtures"],
  "files": ["./src/bin.ts"],
  "include": ["src/**/*"]
}
