{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["github>grafana/grafana-community-team//renovate/renovate"],
  "ignorePaths": [
    "**/fixtures/**/package.json",
    "**/tests/**/package.json",
    "**/test/**/package.json"
  ],
  "packageRules": [
    {
      "matchManagers": ["github-actions"],
      "groupName": "GitHub Actions",
      "description": "Group GitHub Actions updates"
    },
    {
      "matchManagers": ["npm"],
      "groupName": "TypeScript and type definitions",
      "description": "Group TypeScript and type definitions",
      "matchPackageNames": ["/^typescript$/", "/^@tsd//", "/^@types//"]
    },
    {
      "matchManagers": ["npm"],
      "groupName": "npm dependencies",
      "description": "Group all other npm dependencies",
      "matchPackageNames": ["!/^typescript$/", "!/^@tsd//", "!/^@types//"]
    }
  ],
  "labels": ["dependencies"]
}
